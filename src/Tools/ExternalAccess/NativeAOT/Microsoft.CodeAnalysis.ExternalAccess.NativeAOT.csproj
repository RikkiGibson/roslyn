<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>Microsoft.CodeAnalysis.ExternalAccess.NativeAOT</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>

    <!-- NuGet -->
    <IsPackable>true</IsPackable>
    <PackageId>Microsoft.CodeAnalysis.ExternalAccess.NativeAOT</PackageId>
    <PackageDescription>
      A supporting package for NativeAOT
    </PackageDescription>
    <!-- Referenced by dotnet/nativeaot (TODO2) and included in SDK. Requires source build -->
    <ExcludeFromSourceBuild>false</ExcludeFromSourceBuild>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="ILLink.RoslynAnalyzer" />
    <InternalsVisibleTo Include="Microsoft.CodeAnalysis.ExternalAccess.NativeAOT.UnitTests" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Compilers\Core\Portable\Microsoft.CodeAnalysis.csproj" />
    <ProjectReference Include="..\..\..\Compilers\CSharp\Portable\Microsoft.CodeAnalysis.CSharp.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PublicAPI Include="PublicAPI.Shipped.txt" />
    <PublicAPI Include="PublicAPI.Unshipped.txt" />
    <PublicAPI Include="InternalAPI.Shipped.txt" />
    <PublicAPI Include="InternalAPI.Unshipped.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="ExternalAccessAspNetCoreResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ExternalAccessAspNetCoreResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
